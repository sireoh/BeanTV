<!-- filters -->
<div class="btn-group w-100 m-0 p-0">
    <a href="/tvlist" class="btn btn-outline-secondary text-decoration-none text-dark">All TV/Movies</a>
    <a href="/tvlist?status=current" class="btn btn-outline-secondary text-decoration-none text-dark">Currently Watching</a>
    <a href="/tvlist?status=completed" class="btn btn-outline-secondary text-decoration-none text-dark">Completed</a>
    <a href="/tvlist?status=onhold" class="btn btn-outline-secondary text-decoration-none text-dark">On Hold</a>
    <a href="/tvlist?status=dropped" class="btn btn-outline-secondary text-decoration-none text-dark">Dropped</a>
    <a href="/tvlist?status=planned" class="btn btn-outline-secondary text-decoration-none text-dark">Plan to Watch</a>
</div>
<form action="/search" method="post">
    <div class="input-group">
        <input type="search" class="form-control rounded" placeholder="Search" name="search" value="<%= search %>" />
        <button type="submit" class="btn btn-outline-primary" data-mdb-ripple-init>üîç</button>
    </div>
</form>
<table class="text-center">
    <% if (data.length !== 0) { %>
        <tr class="border-bottom">
            <th></th>
            <th class="ps-2 pe-2">#</th>
            <th class="ps-2 pe-2 col-md-1">Image</th>
            <th class="ps-2 pe-2 text-start">Title</th>
            <th class="ps-2 pe-2">Score</th>
            <th class="ps-2 pe-2">Type</th>
            <th class="ps-2 pe-2">Progress</th>
            <th></th>
        </tr>
    <% } else { %>
        <div class="text-center">It's awfully quiet here ... ü¶ó</div>
    <% }%>
    <% for (let i = 0; i < data.length; i++) { %>
        <tr class="border-bottom">
            <td style="background-color: <%= status_colors[ data[0].status ] %>;">&nbsp;</td>
            <td><%= i+1 %></td>
            <td class="btn m-0"><img src="<%= data[0].image %>" height="128px"></td>
            <td>
                <a 
                    href="https://www.imdb.com/title/<%= data[0].imdb %>/"
                    class="me-auto fw-bold text-decoration-none fs-5"
                ><%= data[0].title %></a>
            </td>
            <td><%= data[0].score %></td>
            <td><%= data[0].type %></td>
            <td>
                S<%= data[0].progress.season %>
                E<%= data[0].progress.episode %>
            </td>
            <td><button onclick="alert(`remove ${data[0].title}?`)">‚úèÔ∏è</button></td>
        </tr>
    <% } %>
</table>

